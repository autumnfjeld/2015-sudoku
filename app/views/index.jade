extends ./layout.jade

block content
  div.container
    div.header
      h1 Sudoku Bubbles
    
    div.result

    div.content
      div.sudoku-box
        table(class='bt box-table#{n}')
          tbody
            each row in [0,1,2,3,4,5,6,7,8]
                tr
                  each col in [0,1,2,3,4,5,6,7,8]
                    th
                      input(class='cell c#{row}#{col} row#{row} col#{col}')
      
    div.button-box
      button.btn-done I'm done!
      button.btn-reset Reset

    div.footer
      p Created by Autumn Fjeld
      button.btn-test test
